<h1>Books</h1>
<div class="table">
        <div class="thead">
            <a>taitle</a>
            <a>body</a>
        </div>
    <div class="main">
        <% @books.each do |book| %>
        <div class="mh">
            <span><%= book.title %></span>
            <span><%= book.body %></span>
            <td>
                <%= link_to "show", book_path(book.id) %>
                <%= link_to "edit", edit_book_path(book.id) %>
                <%= link_to "destroy", destroy_bookk_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        </div>
        <% end %>
    </div>
</div>
<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
